    "semantic-release": "^24.0.0",
    "vitepress": "^1.6.3",
    "vue": "^3.5.13"
  },
  "lint-staged": {
    "*.{cpp,h,hpp}": [
      "clang-format -i"
    ],
    "*.{js,json,md}": [
      "prettier --write"
